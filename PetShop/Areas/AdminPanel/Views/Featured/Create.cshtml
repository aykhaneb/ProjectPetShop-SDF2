@using PetShop.ViewModel
@model FeaturedViewModel
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Featured Create Table</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for=ProductName>ProductName</label>
                        <input asp-for=ProductName class="form-control" id="exampleInputUsername1" placeholder="ProductName">
                        <span asp-validation-for="ProductName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for=HrefLink>HrefLink</label>
                        <input asp-for=HrefLink class="form-control" id="exampleInputEmail1" placeholder="HrefLink">
                        <span asp-validation-for="HrefLink"></span>
                    </div>
                    <div class="form-group">
                        <label for="ImageUrl">ImageUrl</label>
                        <input type="file" asp-for="ImageUrl" class="form-control" id="exampleInputPassword1" placeholder="ImageUrl" accept="image/*">
                        <span asp-validation-for="ImageUrl"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button asp-controller="featured" asp-action="index" class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>